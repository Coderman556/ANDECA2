<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MyApplication" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#68A07D</item>
        <item name="colorPrimaryVariant">#5FCA7D</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->

        <item name="android:textColor">@color/black</item>
    </style>
    <style name="SearchViewStyle" parent="Widget.AppCompat.SearchView">
        <!-- Customize the background color -->
        <item name="android:background">@android:color/white</item>

        <!-- Customize the text color -->
        <item name="android:queryHint">@android:color/black</item>

        <!-- Customize the text color of the search input -->
        <item name="android:textColor">@android:color/black</item>
    </style>
    <style name="TransparentSearchViewStyle" parent="Widget.AppCompat.SearchView">
        <item name="android:background">@android:color/transparent</item>
    </style>


</resources>