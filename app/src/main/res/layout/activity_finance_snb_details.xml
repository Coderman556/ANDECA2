<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".FinanceSnB_page"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <!--
        =====================================================================
        1. Daily SnB
        =====================================================================
    -->

    <!--
        =====================================================================
        -> Budget
        =====================================================================
    -->
    <androidx.cardview.widget.CardView
        android:id="@+id/card_daily_budget"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="4dp"
        app:cardCornerRadius="4dp"
        app:cardBackgroundColor="@color/white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                >

                <TextView
                    android:id="@+id/cardTitle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="50dp"
                    android:layout_weight="1"
                    android:text="Card Title"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:gravity="center"
                    android:textSize="18sp" />

            </LinearLayout>

            <EditText
                android:id="@+id/txtGoal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="50dp"
                android:textAlignment="center"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:inputType="numberDecimal"
                android:hint="Enter your goal"
                android:textColorHint="@color/darker_gray"
                />


            <TextView
                android:id="@+id/txtSavingsFormula"
                android:layout_width="260dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="5dp"
                android:visibility="visible"
                android:text="Savings are derived from your (budget - expenses)"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:fontFamily="sans-serif-light"
                android:textStyle="italic" />

            <TextView
                android:layout_width="260dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="5dp"
                android:visibility="visible"
                android:text="To delete a goal, key in a value of 0 and submit"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:fontFamily="sans-serif-light"
                android:textStyle="italic" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>

<Button
    android:id="@+id/submit_button"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="Submit"
    android:onClick="onClick"
    />
</LinearLayout>
