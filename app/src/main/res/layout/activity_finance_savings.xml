<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <androidx.cardview.widget.CardView
        android:id="@+id/card_daily_budget"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="4dp"
        app:cardCornerRadius="4dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="16dp"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Daily Budget"
                android:textSize="18sp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="$15/$30"
                android:gravity="end"
                android:textSize="18sp"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <Button
        android:id="@+id/button_weekly_budget"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Weekly Budget"
        android:drawableEnd="@drawable/ic_nav_icon_normal" />
<!--        android:background="@color/your_background_color"-->
<!--        android:textColor="@color/your_text_color"-->

    <Button
        android:id="@+id/button_monthly_budget"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Monthly Budget"
        android:drawableEnd="@drawable/ic_nav_icon_normal"/>
<!--        android:background="@color/your_background_color"-->
<!--        android:textColor="@color/your_text_color" -->


</LinearLayout>
